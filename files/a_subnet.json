{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Manifest a set of public/private Thred networks",
  "Parameters": {
    "VPCId": {
      "Description": "The VPC ID we are placing subnets inside of",
      "Type": "String"
    },
    "GWId": {
      "Description": "The Gateway ID to use for this subnet",
      "Type": "String"
    },
    "NetworkRange": {
      "Description": "The IP range used by this public subnet. It must exist in the network space of the specified VPC.",
      "Type": "String",
      "Default": ""
    },
    "AZ": {
      "Description": "The availability zone for this subnet to exist in.",
      "Type": "String"
    },
    "InstanceType": {
      "Description": "Instance type to use for NAT",
      "Type": "String",
      "Default": "t2.micro",
      "AllowedValues": [
        "t2.micro",
        "t2.small",
        "t2.medium",
        "none"
      ]
    },
    "NATSGId": {
      "Description": "NAT Client Access Group",
      "Type": "String"
    }
  },
  "Conditions": {
    "HasPublic": {"Fn::Not":[{"Fn::Equals": [{"Ref": "PublicNetwork"}, ""]}]},
    "HasNAT": {"Fn::Not":[{"Fn::Equals": [{"Ref": "InstanceType"}, "none"]}]}
  },
  "Resources": {
    "PublicNetwork": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": { "Ref": "VPCId" },
        "CidrBlock": { "Ref": "PublicNetworkRange" },
        "AvailabilityZone": { "Fn::Join": ["", [{"Ref":"AWS::Region"}, {"Ref":"AZ"}]]}
      },
      "Condition": "HasPublic"
    },
    "PublicRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "VPCId" }
      },
      "Condition": "HasPublic"
    },
    "PublicDefaultRoute": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "RouteTableId": { "Ref": "PublicRouteTable" },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": { "Ref": "GWId" }
      },
      "Condition": "HasPublic"
    },
    "SubnetRoutePublic": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": { "Ref": "PublicNetwork" },
        "RouteTableId": { "Ref": "PublicRouteTable" }
      },
      "Condition": "HasPublic"
    },
    "PrivateNetwork": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": { "Ref": "VPCId" },
        "CidrBlock": { "Ref": "PrivateNetworkRange" },
        "AvailabilityZone": { "Fn::Join": ["", [{"Ref":"AWS::Region"}, {"Ref":"AZ"}]]}
      }
        },
    "PrivateRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "VPCId" }
      }
    },
    "PrivateDefaultRoute": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "RouteTableId": { "Ref": "PrivateRouteTable" },
        "DestinationCidrBlock": "0.0.0.0/0",
        "InstanceId": { "Ref": "DatNAT" }
      },
      "DependsOn": ["DatNAT"]
    },
    "SubnetRoutePrivate": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": { "Ref": "PrivateNetwork" },
        "RouteTableId": { "Ref": "PrivateRouteTable" }
      }
    }
  }
}
